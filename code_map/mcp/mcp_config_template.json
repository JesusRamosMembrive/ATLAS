{
  "mcpServers": {
    "atlas-tools": {
      "command": "python",
      "args": [
        "-m",
        "code_map.mcp.tool_proxy_server",
        "--socket",
        "/tmp/atlas_tool_approval.sock"
      ],
      "env": {
        "ATLAS_TOOL_SOCKET": "/tmp/atlas_tool_approval.sock",
        "ATLAS_CWD": "${CWD}"
      }
    }
  }
}
